{% extends "base.html.twig" %}
{% block body %}
    {% form_theme form 'FreelancerMainBundle:Form:form_freelancer_type.html.twig' %}
    <div class="content-wrapper">
        <div class="bg-olive">

            <div class="login-logo">
                <a href="{{ path('freelancer_main_addprojet') }}"><b>Ajout </b>d'un projet</a>
            </div><!-- /.login-logo -->
            <div class="login-box-body">
                <form action="{{ path('freelancer_main_addprojet') }}" method="POST" class="login-box">
                  {{ form_errors(form) }}
                    <div class="form-group has-feedback">
                        {{form_widget(form.nom,{ 'attr': {'class': 'form-control','placeholder':'Nom' } })}}
                        <span class="glyphicon glyphicon-bookmark form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{form_widget(form.budget,{ 'attr': {'class': 'form-control','placeholder':'Budget' } })}}
                        <span class="glyphicon glyphicon-euro form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        {{form_row(form.checkIn,{ 'attr': {'class': 'form-control','placeholder':'Date de d√©but' } })}}
                        <span class="glyphicon glyphicon-time form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                       {{form_row(form.checkOut,{ 'attr': {'class': 'form-control','placeholder':'Date de fin' } })}}
                        <span class="glyphicon glyphicon-time form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                       {{form_widget(form.description,{ 'attr': {'class': 'form-control','placeholder':'description' } })}}
                        <span class="glyphicon glyphicon-book form-control-feedback"></span>
                    </div>
                <div class="row">
            <div class="col-xs-4">
                {{form_row(form.valider,{ 'attr': {'class': 'btn btn-primary btn-block btn-flat' } })}}
             
            </div><!-- /.col -->
            <div class="col-xs-4">
                {{form_row(form.annuler,{ 'attr': {'class': 'btn btn-primary btn-block btn-flat' } })}}
               
            </div><!-- /.col -->
            {{ form_rest(form) }}
          </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}